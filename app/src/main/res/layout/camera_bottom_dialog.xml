<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:gravity="center"
    android:background="@drawable/dialog_radius"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


    <LinearLayout
        android:id="@+id/ll1"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginHorizontal="50dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/camera_imageView"
            android:layout_toRightOf="@+id/camera_imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_baseline_camera_alt_24"></ImageView>
        <TextView
            android:text="카메라"
            android:layout_below="@+id/camera_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_toRightOf="@+id/ll1"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginHorizontal="50dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/gallery_imageView"
            android:layout_toRightOf="@+id/camera_imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_baseline_image_24"></ImageView>
        <TextView
            android:text="갤러리"
            android:layout_below="@+id/gallery_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>


</RelativeLayout>